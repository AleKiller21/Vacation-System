@using Vacation_System.ServiceReference
@using Web_Service

@model Vacation_System.ServiceReference.Empleado

@{
    Layout = "~/Views/AccountPage/Layout.cshtml";
    ViewBag.Title = "Registro de Usuario";
    var empleado = (Session["User"] as Empleado);
    ServiceClient service = new ServiceClient();
    var deptos = service.LoadDepartments();
    var roles = service.LoadRoles();
    
    service.Close();
}


    <div class="">
   
    <div class="page-title">
        <div class="title_left">
            <h3>Registrar Usuario</h3>
        </div>
        <div class="title_right">
            <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
                <div class="input-group">
                    <input type="text" class="form-control" placeholder="Search for...">
                    <span class="input-group-btn">
                        <button class="btn btn-default" type="button">Go!</button>
                    </span>
                </div>
            </div>
        </div>
    </div>
    <div class="clearfix"></div>
    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2>Datos</h2>
                    <ul class="nav navbar-right panel_toolbox">
                        <li>
                            <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                        </li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>

                        </li>
                        <li>
                            <a class="close-link"><i class="fa fa-close"></i></a>
                        </li>
                    </ul>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <br />
                   
                      @using (Html.BeginForm("Register", "AccountPage", FormMethod.Post, new { @id = "demo-form2", @class="form-horizontal form-label-left", data_toggle="validator"}))
                      {
                        <div class="form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="inputNumber">
                                Talento Humano <span class="required">*</span>
                            </label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <input type="number" id="User.TalentoHumano" name="User.TalentoHumano" required="required" class="form-control col-md-7 col-xs-12">
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="inputName">
                                Nombre <span class="required">*</span>
                            </label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <input type="text" id="User.PrimerNombre" name="User.PrimerNombre" required="required" class="form-control col-md-7 col-xs-12" placeholder="Primer Nombre">
                                <input type="text" id="User.SegundoNombre" name="User.SegundoNombre" required="required" class="form-control col-md-7 col-xs-12" placeholder="Segundo Nombre">
                                <input type="text" id="User.PrimerApellido" name="User.PrimerApellido" required="required" class="form-control col-md-7 col-xs-12" placeholder="Primer Apellido">
                                <input type="text" id="User.SegundoApellido" name="User.SegundoApellido" required="required" class="form-control col-md-7 col-xs-12" placeholder="Segundo Apellido">
                            </div>
                        </div>


                        <div class="form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="inputEmail">
                                Correo/Email <span class="required">*</span>
                            </label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <input id="User.Email" name="User.Email" class="form-control col-md-7 col-xs-12" required="required" type="email">
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="inputDate">
                                Fecha de Ingreso <span class="required">*</span>
                            </label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <input id="fdate" name="User.FechaIngreso" class="form-control col-md-7 col-xs-12" required="required" type="date">
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="inputPassword">
                                Clave <span class="required">*</span>
                            </label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <input id="inputPassword" name="User.Password" class="form-control col-md-7 col-xs-12" required="required" type="password">
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="ConfirmPassword">
                                Confirmar clave <span class="required">*</span>
                            </label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <input id="confirmpass" data-match="#inputPassword" data-match-error="Whoops, these don't match" class="form-control col-md-7 col-xs-12" required="required" type="password">
                            </div>
                            <div class="help-block with-errors"></div>
                        </div>
                            <br />
                        <div class="form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12">
                                Departamentos <span class="required">*</span>
                            </label>
                            <div class="container pull-left" style="width:300px; height: 100px; overflow-y: scroll;">
                                @*<input type="hidden" name="Departamento.Index" value="indx" />
                                <input type="checkbox" name="Departamento[indx].Descripcion" value="Motorista" /> Motorista <br />
                                <input type="hidden" name="Departamento.Index" value="indx1" />
                                <input type="checkbox" name="Departamento[indx1].Descripcion" value="Aseador" /> Aseador <br />
                                <input type="hidden" name="Departamento.Index" value="indx2" />
                                <input type="checkbox" name="Departamento[indx2].Descripcion" value="Recepcionista" /> Recepcionista <br />
                                <input type="hidden" name="Departamento.Index" value="indx3" />
                                <input type="checkbox" name="Departamento[indx3].Descripcion" value="IT" /> IT <br />
                                <input type="hidden" name="Departamento.Index" value="indx4" />
                                <input type="checkbox" name="Departamento[indx4].Descripcion" value="Administracion" /> Administracion <br />*@

                                @for (int i = 0; i < deptos.Length; i++)
                                {
                                    var index = String.Format("indx{0}", i);
                                    if (i == 0)
                                    {
                                        index = "indx";
                                    }
                                    <input type="hidden" name="Departamento.Index" value=@index />
                                    <input type="checkbox" name="Departamento[@index].Descripcion" value=@deptos[i].Descripcion /> @deptos[i].Descripcion <br />
                                }

                            </div>
                        </div>
                            <br />
                        <div class="form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12">
                                Roles <span class="required">*</span>
                            </label>
                            <div class="container pull-left" style=" width:300px; height: 100px; overflow-y: scroll;">
                                @*<input type="hidden" name="Roles.Index" value="indx" />
                                <input type="checkbox" name="Roles[indx].Descripcion" value="Jefe Inmediato" /> Jefe Inmediato <br />
                                <input type="hidden" name="Roles.Index" value="indx1" />
                                <input type="checkbox" name="Roles[indx1].Descripcion" value="Empleado" /> Empleado <br />*@

                                @for (int i = 0; i < roles.Length; i++)
                                {
                                    var index = String.Format("indx{0}", i);
                                    if (i == 0)
                                    {
                                        index = "indx";
                                    }
                                    
                                    <input type="hidden" name="Roles.Index" value=@index />
                                    <input type="checkbox" name="Roles[@index].Descripcion" value=@roles[i].Descripcion /> @roles[i].Descripcion <br />
                                }

                            </div>
                        </div>



                        <div class="ln_solid"></div>

                        <div class="form-group">
                            <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                                <input type="submit" class="btn btn-success" value="Guardar" />
                            </div>
                        </div>
                      }

                </div>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        $('#fdate').daterangepicker({
            singleDatePicker: true,
            calender_style: "picker_4"
        }, function (start, end, label) {
            console.log(start.toISOString(), end.toISOString(), label);
        });
    });
</script>
       

